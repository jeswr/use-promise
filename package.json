{
  "name": "@jeswr/use-promise",
  "version": "0.0.0-development",
  "description": "Takes a logical statement and simplifies it.",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint lib/* __tests__/* --ext .ts",
    "lint:fix": "eslint lib/* __tests__/* --ext .ts --fix",
    "build": "tsc",
    "prepare": "tsc",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeswr/use-promise.git"
  },
  "keywords": [
    "React",
    "hooks",
    "promise"
  ],
  "author": "Jesse Wright <jesse.wright@anu.edu.au>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeswr/use-promise/issues"
  },
  "homepage": "https://github.com/jeswr/use-promise#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-react": "^7.12.13",
    "@semantic-release/npm": "^10.0.2",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^7.0.0",
    "@types/jest": "^27.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "babel-jest": "^29.0.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "pre-commit": "^1.2.2",
    "react-dom": "^18.0.0",
    "react-test-renderer": "^18.0.0",
    "semantic-release": "^21.0.0",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "jest": {
    "collectCoverage": true,
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testRegex": "/__tests__/.*",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "pre-commit": [
    "lint",
    "build",
    "test"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "react": "^18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
